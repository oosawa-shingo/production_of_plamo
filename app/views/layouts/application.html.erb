<!DOCTYPE html>
<html>
  <head>
    <title>ProductionOfPlamo</title>
    <meta name="viewport" content="width=device-width,initial-scale=1, maximum-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
   <header>
    <nav class="navbar navbar-expand-lg navbar-light">
     <div class="container">
      <a class="navbar-brand.p-3" href="/"><h1>Production of Plamo</h1></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">

        <% if end_user_signed_in? %>
          <ul class="navbar-nav ml-auto">
            <li class="nav-item mr-3">
              <%= link_to "マイページ", end_users_my_page_path(current_end_user.id), class: "btn btn-outline-secondary" %>
            </li>

            <li class="nav-item mr-3">
              <%= link_to "投稿一覧", post_plamos_path, class: "btn btn-outline-secondary" %>
            </li>

            <li class="nav-item mr-3">
              <%= link_to "レビュー一覧", post_reviews_path, class: "btn btn-outline-secondary" %>
            </li>

            <li class="nav-item mr-3">
              <%= link_to "ログアウト", destroy_end_user_session_path, method: :delete, class: "btn btn-outline-secondary" %>
            </li>
        <% elsif admin_signed_in? %>
            <ul class="navbar-nav ml-auto">
              <li class="nav-item mr-3">
                <%= link_to "投稿一覧", admin_root_path, class: "btn btn-outline-secondary" %>
              </li>

              <li class="nav-item mr-3">
                <%= link_to "レビュー一覧", admin_post_reviews_path, class: "btn btn-outline-secondary" %>
              </li>

              <li class="nav-item mr-3">
                <%= link_to "会員一覧", admin_end_users_path, class: "btn btn-outline-secondary" %>
              </li>

              <li class="nav-item mr-3">
                <%= link_to "タグ一覧", admin_tags_path, class: "btn btn-outline-secondary" %>
              </li>

              <li class="nav-item mr-3">
                <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "btn btn-outline-secondary" %>
              </li>
        <%  else %>
            <ul class="navbar-nav ml-auto">
              <li class="nav-item mr-3">
                <%= link_to "投稿一覧", post_plamos_path, class: "btn btn-outline-secondary" %>
              </li>

              <li class="nav-item mr-3">
                <%= link_to "レビュー一覧", post_reviews_path, class: "btn btn-outline-secondary" %>
              </li>

              <li class="nav-item mr-3">
                <%= link_to "新規登録", new_end_user_registration_path, class: "btn btn-outline-secondary" %>
              </li>

              <li class="nav-item mr-3">
                <%= link_to "ログイン", new_end_user_session_path, class: "btn btn-outline-secondary" %>
              </li>
        <% end %>
      </div>
     </div>
    </nav>
   </header>

    <%= yield %>

  </body>
</html>
