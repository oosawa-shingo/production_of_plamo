<!--管理者レビュー一覧画面-->
<div class="container my-5">
  <div class="row my-3 offset-1">
    <div class="col-4">
      <h4><レビュー一覧></h4>
    </div>
  </div>

<!--レビュー一覧の情報-->
  <div class="row">
    <div class="col-10 mx-auto">
      <table class="table text-white">
        <thead class="thead-light">
          <tr>
            <th>投稿日時</th>
            <th>ニックネーム</th>
            <th>タイトル</th>
          </tr>
        </thead>
        <tbody>
        <% @post_reviews.order(created_at: :desc).each do |post_review| %>
          <td>
            <%= link_to admin_post_review_path(post_review) do %>
              <p><%= post_review.created_at.strftime("%Y/%m/%d %H:%M:%S") %></p>
            <% end %>
          </td>
          <td><%= post_review.end_user.name %></td>
          <td><%= post_review.title %></td>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-3 mx-auto">
      <%= paginate @post_reviews %>
    </div>
  </div>
</div