<%= link_to "削除する", admin_post_plamo_path(@post_plamo.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger" %>

<div class="container">
  <div class="row mx-auto">
    <div class="col-5">
      <div class="slider">
        <% @post_plamo.plamo_images.each do |images| %>
          <%= image_tag images, class:"img" %>
        <% end %>
      </div>
      <div class="thumbnail">
        <% @post_plamo.plamo_images.each do |images| %>
          <%= image_tag images, class:"img" %>
        <% end %>
      </div>
    </div>

    <div class="col-7">
      <table class="table">
        <tbody>
          <tr>
            <th>ニックネーム</th>
            <td><%= @post_plamo.end_user.name %></td>
          </tr>
          <tr>
            <th>タイトル</th>
            <td><%= @post_plamo.title %></td>
          </tr>
          <tr>
            <th>こだわりポイントや設定 etc</th>
            <td><%= @post_plamo.introduction %></td>
          </tr>
          <tr>
            <th>タグ</th>
            <% @post_plamo.tags.each do |tag| %>
            <td><%= tag.tag_name %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

<div>
  <p>コメント件数：<%= @post_plamo.post_comments.count %></p>
  <% @post_plamo.post_comments.each do |post_comment| %>
    <p><%= image_tag post_comment.end_user.get_profile_image, size:"50x50" %></p>
    <%= post_comment.end_user.name %>
    <%= post_comment.created_at.strftime('%Y/%m/%d') %><%= post_comment.comment %>
    <%= link_to "削除", admin_post_comment_path(post_comment), method: :delete %>
  <% end %>
</div>
