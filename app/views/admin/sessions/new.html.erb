<div class="container my-5">
  <div class="row my-3 offset-1">
    <div class="col-8">
      <h4>管理者ログイン</h4>
    </div>
  </div>

  <%= form_with model: @admin, url: admin_session_path do |f| %>

  <div class="row mx-auto">
    <div class="col-3 offset-1 text-center">
      <P>メールアドレス</P>
    </div>

    <div class="form-floating">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", size: "50", placeholder: "sample@example.com" %>
    </div>
  </div>

  <div class="row mx-auto">
    <div class="col-3 offset-1 text-center">
      <p>パスワード</p>
    </div>

    <div class="form-floating">
      <%= f.password_field :password, autocomplete: "current-password", size: "50" %>
    </div>
  </div>

  <div class="row">
    <div class="col-3 offset-4 pl-1">
      <%= f.submit "ログイン", class: "btn btn-primary" %>
    </div>
  </div>
  <% end %>

