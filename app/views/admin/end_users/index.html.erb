<div class="container my-5">
  <div class="row my-3 offset-1">
    <div class="col-4">
      <h4><会員一覧></h4>
    </div>
  </div>

  <div class="row">
    <div class="col-10 mx-auto">
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
        <% @end_users.each do |users| %>
          <td><%= users.id %></td>
          <td>
            <%= link_to admin_end_user_path(users.id) do %>
              <p><%= users.name %></p>
            <% end %>
          </td>
          <td><%= users.email %></td>
          <td>
            <% if users.is_active %>
             <p class="text-success"><strong>有効</strong></p>
            <% elsif %>
             <p class="text-muted"><strong>退会</strong></p>
            <% end %>
          </td>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-3 mx-auto">
      <%= paginate @end_users %>
    </div>
  </div>
</div>