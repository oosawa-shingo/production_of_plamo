<div>
  <%= image_tag @post_review.review_item_image, size:"300x300" %>
  <p>ニックネーム：<%= @post_review.end_user.name %></p>
  <p>タイトル：<%= @post_review.title %></p>
  <p>商品名：<%= @post_review.review_item %></p>
  <p>使ってみた感想：<%= @post_review.feeling %></p>
  <% if @post_review.usefuld_by?(current_end_user) %>
    <h6>
      <%= link_to post_review_usefuls_path(@post_review), method: :delete do %>
        ♥d(^_^o)<%= @post_review.usefuls.count %> 参考になった
      <% end %>
    </h6>
    <% else %>
    <h6>
      <%= link_to post_review_usefuls_path(@post_review), method: :post do %>
        ♡d(^_^o)<%= @post_review.usefuls.count %> 参考になった
      <% end %>
    </h6>
  <% end %>
</div>

<% if @post_review.end_user == current_end_user %>
  <%= link_to "編集する", edit_post_review_path, class: "btn btn-success" %>
  <%= link_to "削除する", post_review_path(@post_review.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger" %>
<% end %>