<div class="container">
  <div class="row  my-5 offset-1">
    <div class="col-5">
      <h4><新規レビュー></h4>
    </div>
    <% flash.each do |message_type, message| %>
      <div class="flash-message <%= message_type %>"><%= message %></div>
    <% end %>
    <% if @post_review.errors.any? %>
      <%= @post_review.errors.count %>件のエラーが発生しました
      <ul>
        <% @post_review.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  </div>

  <%= form_with model: @post_review do |f| %>
  <div class="row mb-4 mx-auto">
    <div class="col-3 pl-5 offset-1">
      <h5>タイトル</h5>
    </div>

    <div class="form-floating offset-1">
      <%= f.text_field :title, size: "40" %>
    </div>
  </div>

   <div class="row mb-4 mx-auto">
    <div class="col-4 pl-5 offset-1">
      <h5>商品名</h5>
    </div>

    <div class="form-floating">
      <%= f.text_field :review_item, size: "40x8" %>
    </div>
  </div>

   <div class="row mb-4 mx-auto">
    <div class="col-4 pl-5 offset-1">
      <h5>使ってみた感想</h5>
    </div>

    <div class="form-floating">
      <%= f.text_area :feeling, size: "40x8" %>
    </div>
  </div>

  <div class="row mb-4 mx-auto">
    <div class="col-11 pl-5 offset-1">
      <h5>画像　※5枚まで投稿できます</h5>
      <%= f.file_field :review_images, accept: "image/*", multiple: true %>

      <div id="new-review-images">
        <div id="new-review-image-files"></div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-3 mx-auto">
      <%= f.submit 'POST', class: "btn btn-outline-primary btn-block" %>
    </div>
  </div>
  <% end %>
</div>