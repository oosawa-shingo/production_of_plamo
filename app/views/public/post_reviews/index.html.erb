<div class="container">
  <div class="row">
    <div class="col-3">
      <h1>新着レビュー</h1>
    </div>
    <div class="col-2">
      <%= link_to "投稿する", new_post_review_path, class: "btn btn-success btn-block" %>
    </div>
  </div>

  <div class="row">
    <% @post_reviews.each do |post_reviews| %>
    <div class="col-3">
    <div class="card-deck my-3">
    <div class="card text-center pt-2" style="width: 10rem;">
      <%= link_to post_review_path(post_reviews) do %>
        <%= image_tag post_reviews.get_review_item_image, class:"card-imag-top", size:"200x200" %>
      <% end %>

    <div class="card-body">
      <div class="row">
        <div class="col-12">
          <p class="card-text">
            <%= post_reviews.title %>
          </P>
          <p class="card-text">
            <%= post_reviews.end_user.name %>
          </p>
        </div>
      </div>
    </div>
    </div>
    </div>
    </div>
    <% end %>
  </div>