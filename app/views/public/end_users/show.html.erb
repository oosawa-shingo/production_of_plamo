<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag @end_user.get_profile_image, size:"200x200" %>
      <table class="table">
        <tbody>
          <tr>
            <th>ニックネーム</th>
            <td><%= @end_user.name %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= @end_user.email %></td>
          </tr>
          <tr>
            <th>自己紹介</th>
            <td><%= @end_user.introduction %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row pb-3">
    <div class="col-md-3">
      <p><%= link_to "編集する", end_users_my_page_edit_path, class: "btn btn-outline-secondary btn-block" %></p>
    </div>
    <div class="col-md-3">
      <p><%= link_to "投稿一覧をみる", end_users_my_page_edit_path, class: "btn btn-outline-secondary btn-block" %></p>
    </div>
    <div class="col-md-3">
      <p><%= link_to "レビュー一覧をみる", end_users_my_page_edit_path, class: "btn btn-outline-secondary btn-block" %></p>
    </div>
    <div class="col-md-3">
      <p><%= link_to "コメント一覧をみる", end_users_my_page_edit_path, class: "btn btn-outline-secondary btn-block" %></p>
    </div>
    <div class="col-md-3">
      <p><%= link_to "いいね一覧をみる", end_users_my_page_favorites_path, class: "btn btn-outline-secondary btn-block" %></p>
    </div>
    <div class="col-md-3">
      <p><%= link_to "参考になった一覧をみる", end_users_my_page_edit_path, class: "btn btn-outline-secondary btn-block" %></p>
    </div>
    <div class="col-md-3">
      <p><%= link_to "退会する", end_users_my_page_edit_path, class: "btn btn-outline-secondary btn-block" %></p>
    </div>
  </div>