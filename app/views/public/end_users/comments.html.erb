<div class="container my-5">
  <div class="row my-3 offset-1">
    <div class="col-4">
      <h4>コメント一覧</h4>
    </div>
  </div>

  <div class="row">
    <div class="col-8 mx-auto">
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>投稿日時</th>
            <th>タイトル</th>
          </tr>
        </thead>
        <tbody>
        <% @post_comments.each do |post_comment| %>
          <td>
            <%= link_to post_comment.post_plamo_path(post_plamo) do %>
              <%= post_plamo.post_comments.created_at.strftime("%Y/%m/%d %H:%M:%S") %>
            <% end %>
          </td>
          <td><%= post_plamo.title %></td>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>

