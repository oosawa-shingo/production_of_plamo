<h1>新規投稿</h1>

<%= form_with model: @post_plamo do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>

  <h4>こだわりポイントや設定 etc...</h4>
  <%= f.text_area :introduction %>

  <div class="field">
    <h4>画像</h4>
    <%= f.file_field :image, accept: "image/*" %>

    <% if @post_plamo.image.attached? %>
      <% @post_plamo.image.each do |images| %>
        <%= image_tag image.variant(resize_to_limit: [200, 200]) %>
      <% end %>
    <% end %>
  </div>

  <%= f.submit '投稿', class: "btn btn-success" %>
<% end %>